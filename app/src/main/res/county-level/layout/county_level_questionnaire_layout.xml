<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!--    Main div-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--        Top bar-->
        <include layout="@layout/top_bar" />

        <!--        A. County Configuration-->
        <include
            android:id="@+id/countyConfiguration"
            layout="@layout/county_level_configuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp" />


        <!--        C(i). Livelihood Zone SubLocation assignment-->
        <include
            android:id="@+id/lzSubLocationAssignment"
            layout="@layout/lz_sublocation_assignment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="22dp" />


        <!--        C(i). Wealth Group charectaristics-->
        <include
            android:id="@+id/wealthGroupCharectaristics"
            layout="@layout/wealth_group_charectaristics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:visibility="gone" />



        <!--        C. Location and Population-->
        <include
            android:id="@+id/locationAndPopulationLayout"
            layout="@layout/location_and_population_question_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:visibility="gone" />


        <!--        D(i). Crop selection-->
        <include
            android:id="@+id/cropSelectionLayout"
            layout="@layout/wg_crop_selection_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:visibility="gone" />


        <!--        C(ii). Crop Production-->
        <include
            android:id="@+id/cropProductionLayout"
            layout="@layout/wg_crop_production_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:visibility="gone" />

        <!--        E. Main Sources of Water-->
        <include
            android:id="@+id/mainWaterSource"
            layout="@layout/lz_main_water_source_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:visibility="gone" />

        <!--        F. Markets Serving the Livelihood Zone-->
        <include
            android:id="@+id/marketGeographyConfiguration"
            layout="@layout/market_geograpghy_configuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:visibility="gone" />

        <!--        F(ii). Market Transactions-->
        <include
            android:id="@+id/lzMarketTransactions"
            layout="@layout/market_transactions_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:visibility="gone" />


        <!--        G(i). Ethnic Group selection-->
        <include
            android:id="@+id/ethnicGroupSelection"
            layout="@layout/ethnic_group_selection_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:visibility="gone" />


        <!--        G(ii). Ethnic Group population-->
        <include
            android:id="@+id/ethnicGroupPopulation"
            layout="@layout/ethnic_groups_percentage_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:visibility="gone" />


        <!--        H. Patterns of Hunger-->
        <include
            android:id="@+id/lzHungerPatterns"
            layout="@layout/lz_patterns_of_hunger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:visibility="gone" />

        <!--        I. Hazards-->
        <include
            android:id="@+id/lzHazards"
            layout="@layout/lz_hazards_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:visibility="gone" />


        <!--        J. Seasonal Calendar-->
        <include
            android:id="@+id/lzSeasonsCalendar"
            layout="@layout/seasons_calendar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:visibility="gone" />



        <!--        Completion Page-->
        <include
            android:id="@+id/lzCompletionPage"
            layout="@layout/completion_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:visibility="gone" />


    </LinearLayout>

</ScrollView>