<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="24dp"
    android:paddingStart="24dp"
    android:paddingRight="24dp"
    android:paddingEnd="24dp"
    android:paddingBottom="24dp"
    android:background="@drawable/bg_rounded_corner_modal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:orientation="vertical">

        <!--    Number of charectaristics-->
        <LinearLayout
            android:id="@+id/numberCharectaristics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="a) Input the number of charectaristics you would like to register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="#000000"
                android:lineSpacingExtra="8sp"
                android:lineHeight="24sp"
                android:gravity="start"/>


            <EditText
                android:id="@+id/noCharectaristics"
                android:fontFamily="@font/lato_regular"
                android:textStyle="normal"
                android:textSize="24sp"
                android:textColor="#000000"
                android:lineSpacingExtra="8sp"
                android:inputType="numberDecimal"
                android:lineHeight="24sp"
                android:layout_width="100dp"
                android:layout_marginTop="27dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>


            <TextView
                android:id="@+id/xticsNumberSubmitButton"
                android:background="@drawable/bg_green_button"
                android:text="Next"
                android:layout_width="130dp"
                android:layout_height="28dp"
                android:fontFamily="@font/lato_bold"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="12sp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="27dp"/>

        </LinearLayout>


        <!--    Charectaristics list-->


        <LinearLayout
            android:id="@+id/charectaristicsListWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="27dp"
            android:visibility="gone"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/charectaristicsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"/>


            <TextView
                android:id="@+id/submitButton"
                android:background="@drawable/bg_green_button"
                android:text="Submit"
                android:layout_width="130dp"
                android:layout_height="28dp"
                android:fontFamily="@font/lato_bold"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="12sp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="27dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>