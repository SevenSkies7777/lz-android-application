<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingLeft="24dp"
    android:paddingEnd="24dp"
    android:paddingRight="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:lineSpacingExtra="9sp"
        android:text="A. Configuration"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/livelihoodZoneDropDown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/lato_regular"
            android:lineSpacingExtra="7sp"
            android:text="Livelihood Zone"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/livelihoodZoneText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/icWardDropDown"
            android:fontFamily="@font/lato_regular"
            android:text="Select Livelihood Zone..."
            android:textColor="#737373"
            android:textSize="14sp"
            android:textStyle="normal" />

        <View
            android:id="@+id/icWardDropDown"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_drop_down" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/icWardDropDown"
            android:layout_marginTop="7dp"
            android:background="#44d7b6" />

    </RelativeLayout>


    <TextView
        android:id="@+id/configurationSubmitButton"
        android:background="@drawable/bg_green_button"
        android:text="Next"
        android:layout_width="130dp"
        android:layout_height="28dp"
        android:fontFamily="@font/lato_bold"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="12sp"
        android:gravity="center"
        android:layout_gravity="end"
        android:layout_marginTop="27dp"/>

</LinearLayout>