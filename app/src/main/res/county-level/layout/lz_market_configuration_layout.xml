<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingLeft="24dp"
    android:paddingEnd="24dp"
    android:paddingRight="24dp">

    <TextView
        android:text="F. Markets Serving the Livelihood Zone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:lineSpacingExtra="9sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_regular"
        android:gravity="start"
        android:lineHeight="24sp"
        android:lineSpacingExtra="8sp"
        android:text="Enter the names of the main markets used by people living in the livelihood zone, the name of the
nearest town or village and county/subcounty where the market is located. Indicate which types of
product are traded, by circling ‘yes’ or ‘no’. Include markets in other counties, if these are used."
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="normal"
        android:layout_marginTop="27dp"/>

    <TextView
        android:id="@+id/marketConfigurationPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_regular"
        android:gravity="start"
        android:lineHeight="24sp"
        android:lineSpacingExtra="8sp"
        android:text="i) Input the number of markets serving the livelihood zone"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="normal"
        android:layout_marginTop="27dp"/>

    <!--    Number of markets-->
    <LinearLayout
        android:id="@+id/numberMarketsWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="27dp">


        <EditText
            android:id="@+id/noMarkets"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="27dp"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:lineHeight="24sp"
            android:lineSpacingExtra="8sp"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/submitButton"
            android:layout_width="130dp"
            android:layout_height="28dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="27dp"
            android:background="@drawable/bg_green_button"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:lineSpacingExtra="12sp"
            android:text="Next"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/marketList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="27dp"/>

    <RelativeLayout
        android:id="@+id/marketsBottomButtons"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="18dp">

        <TextView
            android:id="@+id/marketConfigBackButton"
            android:text="BACK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#00569c"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="6sp"
            android:lineHeight="20sp"
            android:gravity="center_horizontal"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/marketConfigNextButton"
            android:text="NEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#00569c"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="6sp"
            android:lineHeight="20sp"
            android:gravity="center_horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</LinearLayout>