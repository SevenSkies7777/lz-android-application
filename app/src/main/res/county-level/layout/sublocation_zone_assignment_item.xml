<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight=".5"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/cell_shape">

        <TextView
            android:id="@+id/subLocationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#FF3F51B5"
            android:layout_gravity="start|center_vertical"/>

    </LinearLayout>

    <RelativeLayout
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight=".5"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:background="@drawable/cell_shape">

        <TextView
            android:id="@+id/lzDropDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/highlightIcon"
                android:background="@drawable/check_background"
                android:layout_width="20dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="20dp">

                <View
                    android:background="@drawable/ic_white_check"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

            </LinearLayout>


            <View
                android:visibility="visible"
                android:id="@+id/uncheckedIcon"
                android:background="@drawable/bg_unchecked"
                android:layout_width="20dp"
                android:layout_gravity="center"
                android:layout_height="20dp"/>

        </FrameLayout>

    </RelativeLayout>


</LinearLayout>