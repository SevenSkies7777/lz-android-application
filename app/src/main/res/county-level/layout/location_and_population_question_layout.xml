<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingStart="24dp"
    android:paddingRight="24dp"
    android:paddingEnd="24dp">

    <TextView
        android:text="C. Location and Population"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:lineSpacingExtra="9sp"/>


    <TextView
        android:text="@string/location_and_population_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_regular"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="#000000"
        android:lineSpacingExtra="8sp"
        android:lineHeight="24sp"
        android:layout_marginTop="27dp"
        android:gravity="start"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sublocationLzAssignmentRV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="7dp"/>


    <TextView
        android:text="ii). Wealth Groups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="32dp"
        android:lineSpacingExtra="9sp"/>


    <TableLayout
        android:layout_marginTop="27dp"
        android:id="@+id/tabla_cuerpo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight=".5"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/cell_shape">

                <TextView
                    android:text="Wealth Groups"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#FF3F51B5"
                    android:layout_gravity="start|center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight=".5"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/cell_shape">

                <TextView
                    android:text="Percent of the population in wealth Group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#FF3F51B5"
                    android:layout_gravity="start|center_vertical"/>

            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight=".5"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/cell_shape">

                <TextView
                    android:text="Very Poor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#FF3F51B5"
                    android:layout_gravity="start|center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight=".5"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/cell_shape">

                <EditText
                    android:id="@+id/etVerPoorResponse"
                    android:fontFamily="@font/lato_regular"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="8sp"
                    android:lineHeight="24sp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"/>

            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight=".5"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/cell_shape">

                <TextView
                    android:text="Poor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#FF3F51B5"
                    android:layout_gravity="start|center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight=".5"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/cell_shape">

                <EditText
                    android:id="@+id/etPoorResponse"
                    android:fontFamily="@font/lato_regular"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="8sp"
                    android:lineHeight="24sp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"/>

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight=".5"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/cell_shape">

                <TextView
                    android:text="Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#FF3F51B5"
                    android:layout_gravity="start|center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight=".5"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/cell_shape">

                <EditText
                    android:id="@+id/etMediumResponse"
                    android:fontFamily="@font/lato_regular"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="8sp"
                    android:lineHeight="24sp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"/>

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight=".5"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/cell_shape">

                <TextView
                    android:text="Better Off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#FF3F51B5"
                    android:layout_gravity="start|center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight=".5"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/cell_shape">

                <EditText
                    android:id="@+id/etBetterOffResponse"
                    android:fontFamily="@font/lato_regular"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="8sp"
                    android:lineHeight="24sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_gravity="start|center_vertical"/>

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight=".5"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/cell_shape">

                <TextView
                    android:text="Total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#FF3F51B5"
                    android:layout_gravity="start|center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight=".5"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/cell_shape">

                <TextView
                    android:text="100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#FF3F51B5"
                    android:layout_gravity="start|center_vertical"/>

            </LinearLayout>
        </TableRow>
    </TableLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="18dp">

        <TextView
            android:id="@+id/locationBackButton"
            android:text="BACK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#00569c"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="6sp"
            android:lineHeight="20sp"
            android:gravity="center_horizontal"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/locationNextButton"
            android:text="NEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#00569c"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="6sp"
            android:lineHeight="20sp"
            android:gravity="center_horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</LinearLayout>