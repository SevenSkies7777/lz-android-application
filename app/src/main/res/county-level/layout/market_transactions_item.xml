<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="2"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:background="@drawable/cell_shape">

        <TextView
            android:id="@+id/marketName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_gravity="start"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/livestock"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1.3"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/cell_shape">

        <View
            android:id="@+id/livestockTick"
            android:visibility="gone"
            android:background="@drawable/ic_white_tick"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/poultry"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1.3"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/cell_shape">

        <View
            android:id="@+id/poultryTick"
            android:visibility="gone"
            android:background="@drawable/ic_white_tick"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/farmProduce"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1.3"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/cell_shape">

        <View
            android:id="@+id/farmProduceTick"
            android:visibility="gone"
            android:background="@drawable/ic_white_tick"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/foodProduce"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1.3"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/cell_shape">

        <View
            android:id="@+id/foodProduceTick"
            android:visibility="gone"
            android:background="@drawable/ic_white_tick"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/farmInputs"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1.3"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/cell_shape">

        <View
            android:id="@+id/farmInputsTick"
            android:visibility="gone"
            android:background="@drawable/ic_white_tick"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/labourExchange"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1.3"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/cell_shape">

        <View
            android:id="@+id/labourExchangeTick"
            android:visibility="gone"
            android:background="@drawable/ic_white_tick"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

    </LinearLayout>


</LinearLayout>