<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

<!--    Main div-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

<!--        Top bar-->
        <include layout="@layout/top_bar"/>

<!--        B. Livelihood Zone Definition-->
        <include layout="@layout/lz_definitions_layout"
            android:id="@+id/lzDefinitionsLayout"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="22dp"/>

<!--        C. Location and Population-->
        <include layout="@layout/location_and_population_question_layout"
            android:visibility="gone"
            android:id="@+id/locationAndPopulationLayout"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="22dp"/>

        <!--        D. Crop Production-->
        <include layout="@layout/lz_crop_production_layout"
            android:visibility="gone"
            android:id="@+id/cropProductionLayout"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="22dp"/>

        <!--        E. Main Sources of Water-->
        <include layout="@layout/lz_main_water_source_layout"
            android:visibility="gone"
            android:id="@+id/mainWaterSource"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="22dp"/>

        <!--        F. Markets Serving the Livelihood Zone-->
        <include layout="@layout/lz_markets_layout"
            android:visibility="gone"
            android:id="@+id/lzMarkets"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="22dp"/>

        <!--        F(ii). Market Transactions-->
        <include layout="@layout/lz_market_transactions"
            android:visibility="gone"
            android:id="@+id/lzMarketTransactions"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="22dp"/>

        <!--        H. Patterns of Hunger-->
        <include layout="@layout/lz_patterns_of_hunger"
            android:visibility="gone"
            android:id="@+id/lzHungerPatterns"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="22dp"/>

        <!--        I. Hazards-->
        <include layout="@layout/lz_hazards_layout"
            android:visibility="gone"
            android:id="@+id/lzHazards"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="22dp"/>



    </LinearLayout>

</ScrollView>