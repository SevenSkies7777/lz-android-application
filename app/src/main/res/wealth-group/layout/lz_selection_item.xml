<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="19dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvOption"
            android:text="Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:lineSpacingExtra="8sp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>



        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/highlightIcon"
                android:background="@drawable/check_background"
                android:layout_width="20dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="20dp">

                <View
                    android:background="@drawable/ic_white_check"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

            </LinearLayout>


            <View
                android:visibility="visible"
                android:id="@+id/uncheckedIcon"
                android:background="@drawable/bg_unchecked"
                android:layout_width="20dp"
                android:layout_gravity="center"
                android:layout_height="20dp"/>

        </FrameLayout>

    </RelativeLayout>


    <View
        android:id="@+id/stroke"
        android:background="#DDE4E9"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>