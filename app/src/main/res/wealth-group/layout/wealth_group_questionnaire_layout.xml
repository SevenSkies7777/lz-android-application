<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!--    Main div-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--        Top bar-->
        <include layout="@layout/wealth_group_top_bar"/>


        <!--        B. Main Sources of Income and Food-->
        <include layout="@layout/wg_income_and_food_sources_layout"
            android:id="@+id/wgIncomeAndFoodSources"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="22dp"/>

        <!--        B(ii). Percent of total food consumption from each source-->
        <include layout="@layout/wg_percent_food_consumption_layout"
            android:visibility="gone"
            android:id="@+id/wgPercentFoodConsumptionIncome"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="22dp"/>

        <!--        D. Livestock and Poultry Ownership-->
        <include layout="@layout/wg_livestock_and_poultry"
            android:visibility="gone"
            android:id="@+id/wgLivestockPoultryNumbers"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="22dp"/>

        <!--        D(ii). Livestock and Poultry Contribution-->
        <include layout="@layout/livestock_poultry_contribution"
            android:visibility="gone"
            android:id="@+id/wgLivestockPoultryContribution"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="22dp"/>

        <!--        E. Labour Patterns-->
        <include layout="@layout/labour_patterns"
            android:visibility="gone"
            android:id="@+id/wgLabourPatterns"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="22dp"/>

        <!--        F. Expenditure Patterns-->
        <include layout="@layout/expenditure_patterns"
            android:visibility="gone"
            android:id="@+id/wgExpenditurePatterns"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="22dp"/>

        <!--        G. Settlement and Migration Patterns of the Inhabitants of the Livelihood Zone-->
        <include layout="@layout/migration_patterns"
            android:visibility="gone"
            android:id="@+id/wgMigrationPatterns"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="22dp"/>

        <!--        H. Constraints to Main Economic Activities-->
        <include layout="@layout/wg_constraints_layout"
            android:visibility="gone"
            android:id="@+id/wgConstraints"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="22dp"/>

        <!--        Completion Page-->
        <include
            android:id="@+id/wgCompletionPage"
            layout="@layout/completion_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:visibility="gone" />


    </LinearLayout>

</ScrollView>