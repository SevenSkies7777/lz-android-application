<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight=".4"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:background="@drawable/cell_shape">

        <EditText
            android:id="@+id/participantName"
            android:fontFamily="@font/lato_regular"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="#000000"
            android:lineSpacingExtra="8sp"
            android:lineHeight="24sp"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight=".1"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:background="@drawable/cell_shape">

        <EditText
            android:id="@+id/age"
            android:fontFamily="@font/lato_regular"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="#000000"
            android:inputType="numberDecimal"
            android:lineSpacingExtra="8sp"
            android:lineHeight="24sp"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"/>

    </LinearLayout>


    <LinearLayout
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight=".1"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:background="@drawable/cell_shape">

        <TextView
            android:id="@+id/gender"
            android:text="Select gender..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_gravity="start|center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight=".1"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:background="@drawable/cell_shape">

        <TextView
            android:id="@+id/disability"
            android:text="Disability?..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_gravity="start|center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight=".2"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:background="@drawable/cell_shape">

        <TextView
            android:id="@+id/levelOfEducation"
            android:text="Level of education..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_gravity="start|center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight=".1"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:background="@drawable/cell_shape">

        <TextView
            android:id="@+id/consentToParticipate"
            android:text="Consent to participate..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_gravity="start|center_vertical"/>

    </LinearLayout>


</LinearLayout>