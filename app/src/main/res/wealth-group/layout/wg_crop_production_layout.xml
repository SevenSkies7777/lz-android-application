<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="D. Crop Production"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:lineSpacingExtra="9sp"
        android:paddingStart="24dp"
        android:paddingLeft="24dp" />

    <TextView
        android:text="@string/lz_crop_production_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_regular"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="#000000"
        android:lineSpacingExtra="8sp"
        android:lineHeight="24sp"
        android:layout_marginTop="24dp"
        android:gravity="start"
        android:paddingStart="24dp"
        android:paddingLeft="24dp"/>

    <TextView
        android:text="@string/lz_crop_production_question_section_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_regular"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="#000000"
        android:lineSpacingExtra="8sp"
        android:lineHeight="24sp"
        android:layout_marginTop="27dp"
        android:gravity="start"
        android:paddingStart="24dp"
        android:paddingLeft="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingTop="19dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingBottom="24dp"
        android:background="@drawable/bg_crop_prod">

        <ListView
            android:layout_marginTop="27dp"
            android:id="@+id/cropsList"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:nestedScrollingEnabled="true"/>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp">

        <TextView
            android:id="@+id/cropProductionBackButton"
            android:text="BACK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#00569c"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="6sp"
            android:lineHeight="20sp"
            android:gravity="center_horizontal"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/cropProductionNextButton"
            android:text="NEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#00569c"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="6sp"
            android:lineHeight="20sp"
            android:gravity="center_horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</LinearLayout>