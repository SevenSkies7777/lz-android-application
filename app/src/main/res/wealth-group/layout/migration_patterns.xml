<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="24dp"
    android:paddingStart="24dp"
    android:paddingRight="24dp"
    android:paddingEnd="24dp"
    android:orientation="vertical">

    <TextView
        android:text="G. Settlement and Migration Patterns of the Inhabitants of the Livelihood Zone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:lineSpacingExtra="9sp"/>


    <TextView
        android:text="In the table below, give the approximate proportions of households falling into each category in the livelihood zone."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_regular"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="#000000"
        android:lineSpacingExtra="8sp"
        android:lineHeight="24sp"
        android:layout_marginTop="27dp"
        android:gravity="start"/>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".8"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/cell_shape">

                <TextView
                    android:text="MIGRATION PATTERN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#FF3F51B5"
                    android:layout_gravity="start|center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".2"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/cell_shape">

                <TextView
                    android:text="Percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#FF3F51B5"
                    android:layout_gravity="start|center_vertical"/>

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".8"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/cell_shape">

                <TextView
                    android:text="Fully Nomadic (no fixed abode, donâ€™t settle)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#FF3F51B5"
                    android:layout_gravity="start|center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fullyNomadicCell"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".2"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/cell_shape">

                <EditText
                    android:id="@+id/fullyNomadic"
                    android:fontFamily="@font/lato_regular"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:inputType="numberDecimal"
                    android:lineSpacingExtra="8sp"
                    android:lineHeight="24sp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"/>

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".8"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/cell_shape">

                <TextView
                    android:text="Semi Nomadic (nomadic for part of year but have fixed abode)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#FF3F51B5"
                    android:layout_gravity="start|center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/semiNomadicCell"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".2"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/cell_shape">

                <EditText
                    android:id="@+id/semiNomadic"
                    android:fontFamily="@font/lato_regular"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:inputType="numberDecimal"
                    android:lineSpacingExtra="8sp"
                    android:lineHeight="24sp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"/>

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".8"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/cell_shape">

                <TextView
                    android:text="Occasional Nomadic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#FF3F51B5"
                    android:layout_gravity="start|center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/occasionalNomadicCell"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".2"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/cell_shape">

                <EditText
                    android:id="@+id/occasionalNomadic"
                    android:fontFamily="@font/lato_regular"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:inputType="numberDecimal"
                    android:lineSpacingExtra="8sp"
                    android:lineHeight="24sp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"/>

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".8"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/cell_shape">

                <TextView
                    android:text="Out-migrant labour (live in LZ but work elsewhere seasonally)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#FF3F51B5"
                    android:layout_gravity="start|center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/outMigrantLabourCell"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".2"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/cell_shape">

                <EditText
                    android:id="@+id/outMigrantLabour"
                    android:fontFamily="@font/lato_regular"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:inputType="numberDecimal"
                    android:lineSpacingExtra="8sp"
                    android:lineHeight="24sp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"/>

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".8"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/cell_shape">

                <TextView
                    android:text="In-migrant Labour (live elsewhere but come to work in the LZ)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#FF3F51B5"
                    android:layout_gravity="start|center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/inMigrantLabourCell"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".2"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/cell_shape">

                <EditText
                    android:id="@+id/inMigrantLabour"
                    android:fontFamily="@font/lato_regular"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:inputType="numberDecimal"
                    android:lineSpacingExtra="8sp"
                    android:lineHeight="24sp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"/>

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".8"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/cell_shape">

                <TextView
                    android:text="Fully Settled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#FF3F51B5"
                    android:layout_gravity="start|center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fullySettledCell"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".2"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/cell_shape">

                <EditText
                    android:id="@+id/fullySettled"
                    android:fontFamily="@font/lato_regular"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="8sp"
                    android:inputType="numberDecimal"
                    android:lineHeight="24sp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"/>

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".8"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/cell_shape">

                <TextView
                    android:text="Internally displaced (settled in temporary accommodation, cannot return to their usual homes)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#FF3F51B5"
                    android:layout_gravity="start|center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/internallyDisplacedCell"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".2"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/cell_shape">

                <EditText
                    android:id="@+id/internallyDisplaced"
                    android:fontFamily="@font/lato_regular"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="8sp"
                    android:inputType="numberDecimal"
                    android:lineHeight="24sp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"/>

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".8"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/cell_shape">

                <TextView
                    android:text="TOTAL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#FF3F51B5"
                    android:layout_gravity="start|center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".2"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/cell_shape">

                <TextView
                    android:text="100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#FF3F51B5"
                    android:layout_gravity="start|center_vertical"/>

            </LinearLayout>

        </TableRow>

    </TableLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="18dp">

        <TextView
            android:id="@+id/migrationPatternsBackButton"
            android:text="BACK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#00569c"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="6sp"
            android:lineHeight="20sp"
            android:gravity="center_horizontal"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/migrationPatternsNextButton"
            android:text="SAVE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#00569c"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="6sp"
            android:lineHeight="20sp"
            android:gravity="center_horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</LinearLayout>